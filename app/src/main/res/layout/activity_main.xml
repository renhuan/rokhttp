<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="@dimen/dp_250"
            android:layout_height="?actionBarSize"
            android:background="@color/purple"
            android:elevation="10dp"
            android:text="点击"
            android:textColor="@color/white" />

        <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="@dimen/dp_120"
            android:layout_height="?actionBarSize"
            android:background="@color/colorAccent"
            android:elevation="10dp"
            android:text="点击"
            android:textColor="@color/white" />
    </LinearLayout>

    <com.renhuan.administrator.myokhttp.CircleView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:visibility="gone" />

    <com.renhuan.administrator.myokhttp.EditTextWithClear
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rh_drawableRight="@drawable/ic_close" />

    <com.renhuan.administrator.myokhttp.EditTextWithClear
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rh_drawableHeight="@dimen/dp_15"
        app:rh_drawableRight="@drawable/ic_close"
        app:rh_drawableWidth="@dimen/dp_15" />

    <com.renhuan.administrator.myokhttp.DoubleImageView
        android:id="@+id/image1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/flag_us"
        android:drawableRight="@drawable/flag_uk"
        android:spacing="15dp"
        android:text="5 - 5"
        android:textColor="#FFF"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />
</LinearLayout>