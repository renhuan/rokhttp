<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <com.renhuan.administrator.myokhttp.EditTextWithClear
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:rh_drawableHeight="@dimen/dp_15"
        app:rh_drawableRight="@drawable/ic_close"
        app:rh_drawableWidth="@dimen/dp_15" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <com.flyco.tablayout.SlidingScaleTabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:tl_gradient_endColor="@color/blue"
        app:tl_gradient_startColor="@color/colorAccent"
        app:tl_indicator_corner_radius="5dp"
        app:tl_indicator_height="3dp"
        app:tl_indicator_width="20dp"
        app:tl_openTextDmg="true"
        app:tl_tab_marginBottom="5dp"
        app:tl_tab_padding="8dp"
        app:tl_tab_vertical_gravity="Bottom"
        app:tl_textBold="SELECT"
        app:tl_textSelectColor="@color/black"
        app:tl_textSelectSize="22sp"
        app:tl_textUnSelectColor="@color/black"
        app:tl_textUnSelectSize="14sp" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blueGrey" />
</LinearLayout>